<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/position_frame_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/position_main_view">

        <com.swerly.mywifiheatmap.SwerlyPhotoView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/position_photo_view"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:background="@drawable/card"
            android:layout_margin="15dp"
            android:elevation="2dp"
            android:id="@+id/position_next_button_layout">

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:id="@+id/position_info_button"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                style="?android:attr/borderlessButtonStyle"
                android:src="@drawable/ic_info_outline_black_24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_gravity="center"/>
            <!--
            <ImageButton
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:id="@+id/info_undo_button"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                style="?android:attr/borderlessButtonStyle"
                android:src="@drawable/ic_undo_black_24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_gravity="center"/>


            <ImageButton
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:id="@+id/expand_settings_button"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_settings_black_24dp"
                android:layout_gravity="center"/>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:id="@+id/position_next_layout"
            android:background="@drawable/card"
            android:layout_margin="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:elevation="2dp">

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:id="@+id/position_next_button"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                style="?android:attr/borderlessButtonStyle"
                android:src="@drawable/ic_navigate_next_black_24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <com.swerly.mywifiheatmap.InfoView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/position_info_view"
            android:visibility="invisible"/>

    </FrameLayout>


</FrameLayout>
